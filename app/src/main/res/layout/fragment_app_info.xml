<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:background="@android:color/background_light"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <me.richard.note.widget.themed.SupportCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                style="@style/SettingsCardStyle">

                <LinearLayout
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_launcher_big"
                        android:layout_margin="20dp"
                        android:layout_width="160dp"
                        android:layout_height="160dp" />

                    <me.richard.note.widget.themed.SupportTextView
                        android:text="@string/app_name"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_app_desc"
                        android:textSize="16sp"
                        android:gravity="center_horizontal"
                        android:text="@string/app_description"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <me.richard.note.widget.themed.SupportTextView
                        android:id="@+id/tv_version_name"
                        android:textSize="15sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </me.richard.note.widget.themed.SupportCardView>

            <me.richard.note.widget.themed.SupportCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                style="@style/SettingsCardStyle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <me.richard.note.widget.themed.SupportTextView
                        android:text="@string/help_development"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SettingsCardTitleStyle"/>

                    <me.richard.note.widget.themed.Divider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <me.richard.note.widget.themed.CardTitleView
                        android:id="@+id/ctv_thanks"
                        app:card_icon="@drawable/ic_assistant_photo_black_24dp"
                        app:card_title="@string/thanks"
                        app:card_sub_title="@string/thanks_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <me.richard.note.widget.themed.CardTitleView
                        android:id="@+id/ctv_rating"
                        app:card_icon="@drawable/ic_star_black_24dp"
                        app:card_title="@string/rating"
                        app:card_sub_title="@string/give_good_rating_if_you_like"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </me.richard.note.widget.themed.SupportCardView>

        </LinearLayout>

    </ScrollView>

</layout>